<!-- Modals -->
<div id="addNewSettlement" class="modal fade" tabindex="-1" data-width="760" data-backdrop="static" data-keyboard="false">
    <div class="modal-header">
        <h4>تسوية جديدة</h4>
    </div>
    <div class="modal-body">
        <form class="form">
            <div class="form-group">
                <div class="input-group select2-bootstrap-prepend">
                    <span class="input-group-btn">
                        <button class="btn green" style="min-width:120px" type="button">
                            وصف التسوية
                        </button>
                    </span>
                    <input type="text" data-required="1" value="" class="form-control"
                           name="empName" />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group select2-bootstrap-prepend">
                    <span class="input-group-btn">
                        <button class="btn green" style="min-width:120px" type="button" data-select2-open="select-employee-settlement">
                            إختر
                            عميل
                        </button>
                    </span>
                    <select id="select-employee-settlement" class="form-control select2">
                        <option>محمود</option>
                        <option>علي</option>
                        <option>محمد</option>
                        <option>احمد</option>
                        <option>مي</option>
                        <option>يوسف</option>
                        <option>طارق</option>
                        <option>تامر</option>
                        <option>عبده</option>
                        <option>معاذ</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group select2-bootstrap-prepend">
                    <span class="input-group-btn">
                        <button class="btn green" style="min-width:120px" type="button">
                            قيمة التسوية
                        </button>
                    </span>
                    <input type="number" data-required="1" value="" class="form-control" min="0"
                           name="empName" required />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group select2-bootstrap-prepend">
                    <span class="input-group-btn">
                        <button class="btn green" style="min-width:120px" type="button" data-select2-open="select-settlement-type">
                            إختر
                            نوع التسوية
                        </button>
                    </span>
                    <select id="select-settlement-type" class="form-control select2">
                        <option>تسوية بالخصم</option>
                        <option>تسوية بالزيادة</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group select2-bootstrap-prepend">
                    <span class="input-group-btn">
                        <button class="btn green" style="min-width:120px" type="button">
                            ملاحظات
                        </button>
                    </span>
                    <input type="text" data-required="1" value="" class="form-control"
                           name="empName"/>
                </div>
            </div>

            <hr />
            <button type="submit" class="btn green">إضافة</button>
            <button type="button" data-dismiss="modal" class="btn red">إلغاء</button>
        </form>
    </div>
</div>

