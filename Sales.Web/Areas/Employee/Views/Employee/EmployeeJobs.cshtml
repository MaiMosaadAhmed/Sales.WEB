
@{
    ViewBag.Title = "EmployeeJobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN PAGE HEAD-->
<div class="page-head">
    <div class="container-fluid">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>الوظائف</h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="/Employee/Employee/EmployeeJobs">الوظائف</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>إدارة العاملين</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet light ">
                        <div class="portlet-title">
                            <div class="caption font-blue">
                                <i class="icon-briefcase font-blue"></i>
                                <span class="caption-subject bold uppercase">جدول الوظائف</span>
                            </div>
                            <div class="tools"> </div>
                            <div>
                                <button id="add" type="button" data-target="#addNewJob" data-toggle="modal"
                                        class="btn green-meadow sbold btn-outline">
                                       إضافة وظيفة <i class="glyphicon glyphicon-plus button-icon"></i>
                                </button>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>الوظائف المسجلة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>امين مخازن</td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>مشرف مندوبين</td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>مشرف عام</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->

<!-- Modals -->
<div id="addNewJob" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <form class="form">
        <div class="modal-body">
            <div class="form-group">
                <label class="control-label ">
                    اسم الوظيفة
                    <span class="required"> * </span>
                </label>
                <div class="input-icon right">
                    <i class="fa"></i>
                    <input type="text" data-required="1" value="" class="form-control"
                           name="empName" required />
                </div>
            </div>
            <hr />
                <button type="submit" class="btn green">إضافة وظيفة</button>
                <button type="button" data-dismiss="modal" class="btn red">إلغاء</button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/Areas/Employee/scripts/EmployeeJobs.js"></script>
}
